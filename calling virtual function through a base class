#include<iostream>
using namespace std;
class base{
public:
virtual void vfunc(){
cout<<"This is base's vfunc()"<<endl;
}
};
class derived1:public base{
public:
void vfunc(){
cout<<"This is derived1's vfunc()"<<endl;
}
};
class derived2:public base{
public:
void vfunc(){
cout<<"This is base's vfunc()"<<endl;
}
};
void f(base &r)
{
    r.vfunc();
}
int main()
{
base b;
derived1 d1;
derived2 d2;
f(b);
f(d1);
f(d2);
return 0;
}
